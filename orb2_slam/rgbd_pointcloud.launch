<launch>
  <node pkg="nodelet" type="nodelet" name="nodelet_manager" args="manager" />

  <node pkg="nodelet" type="nodelet" name="nodelet2" args="load depth_image_proc/register nodelet_manager">
    <remap from="rgb/camera_info" to="/rgb_stereo_publisher/color/camera_info"/>
    <remap from="depth/camera_info" to="/rgb_stereo_publisher/stereo/camera_info"/>
    <remap from="depth/image_rect" to="/rgb_stereo_publisher/stereo/depth"/>
  </node>

  <node pkg="nodelet" type="nodelet" name="nodelet1"
        args="load depth_image_proc/point_cloud_xyzrgb nodelet_manager">
    <remap from="rgb/camera_info" to="/depth_registered/camera_info"/>
    <remap from="rgb/image_rect_color" to="/rgb_stereo_publisher/color/image"/>

    <remap from="points" to="/camera/depth/points"/>
  </node>
</launch>